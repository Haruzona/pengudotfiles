#!/usr/bin/env bash

source "$HOME"/.config/bspwm/user/options

get_weather(){
    sleep 0.5
    curl "wttr.in/$weather_location?format=%C+%t" -o /tmp/weather &>/dev/null
    cat /tmp/weather
}

print_weather(){
    if [ -f /tmp/weather ]; then
        cat /tmp/weather
    else 
        get_weather
    fi
}

print_weather
