#!/usr/bin/env bash

config() { bspc config "$@" }

# bspwm config
# usage: config [argument]

source "$HOME"/.config/bspwm/user/options

# workspaces
for monitor in $(xrandr -q | grep -w 'connected' | cut -d' ' -f1); do
		bspc monitor "$monitor" -d '1' '2' '3' '4' '5' '6' '7' '8' '9'
done

# config
config remove_unplugged_monitors true
config remove_disabled_monitors true
config window_gap $bsp_gaps
config border_width $bsp_border
config focus_follows_pointer $bsp_focus_pointer
config split_ratio $bsp_split_ratio
config single_monocle true
config borderless_monocle $bsp_borderless_monocle
config gapless_monocle $bsp_gapless_monocle
config top_padding $bsp_top_padding
config bottom_padding $bsp_bottom_padding
config left_padding $bsp_left_padding
config right_padding $bsp_right_padding
