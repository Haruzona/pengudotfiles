#!/usr/bin/env bash

# ################### #
# -=- penguinRice -=- #
# ################### #

# // Terminate already running programs //
processes=("sxhkd" "polybar" "dunst")
for process in "${processes[@]}"; do
    if pgrep -f "$process"; then
        pkill -f "$process" > /dev/null; sleep 0.2
    fi
done

# // Start sxhkd //
killall -q sxhkd 
sleep 0.2
sxhkd -c "$HOME"/.config/bspwm/config/keys &

# // Audio //
audio(){
  if ! pgrep -f pipewire; then
    pipewire &
  fi
}

# audio &

# // Config files //
"$HOME"/.screenlayout/monitor.sh &
"$HOME"/.config/bspwm/config/cfg &
"$HOME"/.config/bspwm/config/rules &
"$HOME"/.config/bspwm/config/autostart & 
"$HOME"/.config/bspwm/config/decoration & 
"$HOME"/.config/bspwm/config/misc &
